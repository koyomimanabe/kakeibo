<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=DotGothic16&display=swap" rel="stylesheet">


<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>家計簿 - ダッシュボード</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body class="dashboard-page">
    <div class="container">
        <header class="header">
            <h1 class="main-title">家計</h1>
            <button id="logout-btn" class="btn-secondary">ログアウト</button>
        </header>

        <!-- サマリーセクション -->
        <section class="summary-section">
            <div class="summary-card income">
                <h3>収入</h3>
                <p class="amount" id="total-income">¥<%= totalIncome.toLocaleString() %></p>
            </div>
            <div class="summary-card expense">
                <h3>支出</h3>
                <p class="amount" id="total-expense">¥<%= totalExpense.toLocaleString() %></p>
            </div>
            <div class="summary-card balance">
                <h3>残高</h3>
                <p class="amount" id="balance">¥<%= balance.toLocaleString() %></p>
            </div>
            <div class="summary-card empty">
                <button id="add-item-btn" class="btn-primary large">+ 追加</button>
            </div>
        </section>

        <div class="board">
            <!-- フィルターセクション -->
            <section class="filter-section">
                <div class="filter-group">
                    <label>収支区分</label>
                    <select id="type-filter" class="filter-select">
                        <option value="all">すべて</option>
                        <option value="Income">収入</option>
                        <option value="Expense">支出</option>
                    </select>
                </div>
                <div class="filter-group">
                    <label>開始日</label>
                    <input type="date" id="start-date" class="filter-input">
                </div>
                <div class="filter-group">
                    <label>終了日</label>
                    <input type="date" id="end-date" class="filter-input">
                </div>
                <div class="filter-group">
                    <button id="apply-filter" class="btn-primary">フィルター適用</button>
                </div>
                <div class="filter-group">
                    <button id="clear-filter" class="btn-secondary">クリア</button>
                </div>
            </section>

            <!-- 収支一覧 -->
            <section class="items-panel">
                <h2 class="section-title">収支一覧</h2>
                <table class="items-table">
                    <thead>
                        <tr>
                            <th>項目</th>
                            <th>区分</th>
                            <th>金額</th>
                            <th>日付</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody id="items-body">
                        <!-- 行が動的に入ります -->
                    </tbody>
                </table>
            </section>
        </div>
    </div>

    <!-- モーダル（追加・編集） -->
    <div id="item-modal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2 id="modal-title">収支項目を追加</h2>
            <form id="item-form">
                <input type="hidden" id="item-id">
                <div class="form-group">
                    <label for="item-event">項目名 *</label>
                    <input type="text" id="item-event" required>
                </div>
                <div class="form-group">
                    <label for="item-amount">金額 *</label>
                    <input type="number" id="item-amount" min="0" required>
                </div>
                <div class="form-group">
                    <label for="item-type">収支区分 *</label>
                    <select id="item-type" required>
                        <option value="Income">収入</option>
                        <option value="Expense">支出</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="item-date">日付 *</label>
                    <input type="date" id="item-date" required>
                </div>
                <div class="form-group">
                    <label for="item-memo">メモ</label>
                    <textarea id="item-memo" rows="4"></textarea>
                </div>
                <div class="form-actions">
                    <button type="submit" class="btn-primary">保存</button>
                    <button type="button" class="btn-secondary" id="cancel-btn">キャンセル</button>
                </div>
            </form>
        </div>
    </div>

    <script src="/javascripts/dashboard.js"></script>
</body>
</html>

